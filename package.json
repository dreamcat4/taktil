{
  "name": "taktil",
  "description": "Taktil is a lightweight control surface scripting framework for Bitwig Studio that encourages rapid development and community code reuse.",
  "version": "0.9.1-dev.3",
  "repository": "taktiljs/taktil",
  "author": "Joseph Larson",
  "tags": [
    "bitwig",
    "control surface script",
    "framework",
    "typescript"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "dependencies": {
    "tslib": "^1.7.1"
  },
  "devDependencies": {
    "typedoc": "^0.8.0",
    "@types/jest": "^20.0.7",
    "@types/node": "^8.0.20",
    "del": "^3.0.0",
    "delete-empty": "^1.0.1",
    "glob": "^7.1.2",
    "gulp": "^3.9.1",
    "gulp-typescript": "^3.2.1",
    "jest": "^20.0.4",
    "merge2": "^1.1.0",
    "prettier": "^1.5.3",
    "ts-jest": "^20.0.10",
    "tslint": "^5.6.0",
    "tslint-config-airbnb": "^5.2.1",
    "tslint-config-prettier": "^1.3.0",
    "tsutils": "^2.8.0",
    "typed-bitwig-api": "^2.1.2",
    "typescript": "^2.4.2"
  },
  "scripts": {
    "start": "gulp watch",
    "build": "gulp build",
    "clean": "gulp clean",
    "test": "jest",
    "check": "tsc --noEmit",
    "lint": "tslint -c tslint.json $(find . ! -path './.git*' ! -path './node_modules*' -path '*.ts') || true",
    "format": "prettier --parser typescript --print-width 100 --tab-width 4 --single-quote --trailing-comma=es5 --write $(find . ! -path './.git*' ! -path './node_modules*' -path '*.ts')",
    "typedoc": "typedoc --module commonjs theme 'minimal' --exclude '**/*.spec.ts' --out ./docs/typedoc/ src/index.ts",
    "preversion": "npm test && npm run build",
    "postversion": "npm run clean",
    "prepack": "npm test && npm run build",
    "postpack": "npm run clean"
  },
  "engines": {
    "node": ">= 6.9.0"
  },
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/taktil/taktiljs/issues"
  },
  "homepage": "https://github.com/taktil/taktiljs#readme",
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  }
}
