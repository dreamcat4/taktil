{
    "compilerOptions": {
        "target": "es5",
        "sourceMap": false,
        "declaration": true,
        "baseUrl": "./",
        "moduleResolution": "node",
        "outDir": "./",
        "lib": [
            "dom",
            "es6",
            "dom.iterable",
            "scripthost"
        ],
        "importHelpers": true,
        "types": [
            "typed-bitwig-api",
            "@types/mocha",
            "@types/chai",
            "@types/node"
        ],
        "strict": true
    },
    "compileOnSave": false,
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules/**/*"
    ]
}